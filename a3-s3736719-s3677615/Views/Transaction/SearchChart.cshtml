@{
    ViewData["Title"] = "Search transaction chart";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Chart.css" />
}

<h1>Transaction count for last 10 days</h1>

<div class="container">
    <canvas id="transactionChart"></canvas>
</div>

@section Scripts {
    <script src="~/js/Chart.js"></script>
    <script src="~/js/moment.js"></script>
    <script>var canvas = document.getElementById("transactionChart").getContext("2d");

        $.get("http://localhost:57385/api/Transaction/DateCountLast10Days", function (transactionDates) {
            const labels = [];
            const data = [];
            for (let x of transactionDates) {
                labels.push(x.date);
                data.push({ t: moment(x.date, "DD/MM/YYYY").toDate(), y: x.count });
            }

            const transactionChart = new Chart(canvas, {
                type: "bar",
                data: {
                    labels: labels,
                    datasets: [{
                        label: "Transaction count",
                        data: data,
                        options: {
                            scales: {
                                xAxes: [{
                                    type: "time",
                                    time: {
                                        unit: "day"
                                    }
                                }]
                            }
                        },
                        backgroundColor: "rgba(255, 99, 132, 0.2)",
                        borderColor: "rgba(255, 99, 132, 1)",
                        borderWidth: 1
                    }]
                }
            });
        });</script>
}