@model AdminLogin
@{
    ViewData["Title"] = "Admin Login";
}

    <h1 class="display-4">Good Day Today, Admin</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <!--automatically validation-->
                <label asp-for="AdminId" class="control-label"></label>
                <input asp-for="AdminId" class="form-control" />
                <span asp-validation-for="AdminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminName" class="control-label">Password</label>
                <input asp-for="AdminName" name="AdminName" type="password" class="form-control"
                       data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("AdminName", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
