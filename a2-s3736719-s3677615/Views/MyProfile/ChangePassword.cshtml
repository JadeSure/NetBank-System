@model a2_s3736719_s3677615.ViewModels.PasswordViewModel
@{
    ViewBag.Title = "Change password";
}

<h1 class="display-4">@Model.Login.Customer.CustomerName (@Model.Login.UserID)</h1>

<h4>Login</h4>
<hr />


<div class="row">
    <div class="col-md-4">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Login.CustomerID" />
            <input type="hidden" asp-for="Login.UserID" />

            <div class="form-group">
                @* ReSharper disable once UnknownCssClass *@
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                @* ReSharper disable once UnknownCssClass *@
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Details" class="btn btn-primary">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
